{
	"$schema": "https://schema.railpack.com",
	"provider": "node",
	"packages": {
		"node": "20",
		"bun": "latest"
	},
	"steps": {
		"install": {
			"commands": [
				"bun install"
			]
		},
		"build": {
			"inputs": [
				{
					"step": "install"
				}
			],
			"commands": [
				"bun run build"
			],
			"variables": {
				"NODE_ENV": "production"
			}
		}
	},
	"deploy": {
		"inputs": [
			{
				"step": "build",
				"include": [
					"dist"
				]
			}
		],
		"startCommand": "bunx serve dist -l $PORT",
		"variables": {
			"NODE_ENV": "production"
		}
	}
}